        <button class="navbar-brand" id="profile">My Profile</button>
        <button class="navbar-brand" id="logoff">Log Off</button>
    </div>
</div>
<div class="row">
    <div id="map" class="map"></div>
    <div>
        <div class="col-md-10">
            <label>Price:</label>
            <input id="price" type="number" />
        </div>
        <h5>Leave a comment</h5>
        <div class="col-md-10">
            <label>Summary</label>
            <textarea id="CommentSummary"></textarea>
        </div>
        <div class="col-md-10">
            <label>Stars</label>
            <input type="number" id="StarComment" max="5" min="1" maxlength="5" />
        </div>
    </div>
        <div class="col-md-10">
            <label>Order</label>
            <input type="submit" id="finish" class="btn btn-default" value="Complete"/>
        </div>
    </div>